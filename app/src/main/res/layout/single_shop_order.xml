<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/displayedOrderNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:inputType="none"
        android:text="Order for: "
        android:textSize="24sp" />
    <TextView
        android:id="@+id/displayedOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:ems="10"

        android:inputType="none"
        android:text=""
        android:textSize="24sp" />
    <TextView
        android:id="@+id/displayedStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:ems="10"

        android:inputType="none"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Order_notes"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Order Notes"
        android:inputType="text" />

    <TextView
        android:id="@+id/orderQuantityyyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Order Quantity"
        android:inputType="number"
        android:text="1" />

    <TextView
        android:id="@+id/breakUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"
        android:ems="10"

        android:inputType="none"
        android:text="_________________________________________________"
        android:textSize="16sp" />


</LinearLayout>